@require "vars.styl";

/*  <general>  */
html
	font-size 62.5%
	cursor default
    -webkit-text-size-adjust 100%
    -ms-text-size-adjust 100%
	-webkit-tap-highlight-color rgba(0, 0, 0, 0)
	text-rendering optimizeLegibility
	-webkit-font-smoothing antialiased
	font-smoothing antialiased
	-moz-osx-font-smoothing grayscale
body
	display flex
	flex-direction column
	min-height 100vh
	color $colorText
	font normal 1.6rem/1.5 'Rubik'
	background-color #fff
:-moz-placeholder
	opacity 1
	color currentColor
:-ms-input-placeholder
	opacity: 1
	color currentColor
a
	color $colorBlue
	font inherit
	text-decoration none
	transition all .2s
	&:hover
		text-decoration underline
img
	max-width 100%
.main
	flex 1
/*  </general>  */

/*  <header>  */
.header
	flex-shrink 0
	text-align center
	&__target
		font-size 1.8rem
		text-transform uppercase
		border-bottom 6px solid #dfdddb
		padding 15px 0 10px
		span
			display block
			margin-top 10px
	&__logo
		margin 20px 0
		img
			max-width 222px
		&-slogan
			font-size 1.8rem
			margin-top 5px
	&__contacts
		font-size 1.8rem
		border-bottom 6px solid #dfdddb
		padding-bottom 15px
		&-phone
			color $colorText
			font-weight bold
			font-size 2rem
			text-decoration none
		&-workhours
			font-weight 300
		&-links
			font-weight 500
			margin-top 5px
			a
				color $colorGreen
				text-decoration underline
				&:last-child
					display none
				&:hover
					text-decoration none
	&__action
		display flex
		flex-direction column
		align-items center
		margin 20px 0 10px
		&-item
			position relative
			color $colorText
			font-size 1.8rem
			padding-top 44px
			padding-bottom 5px
			margin-bottom 20px
			&::after
				position absolute
				bottom 0
				left 0
				width 0
				height 2px
				background-color $colorOrange
				content ''
				transition all .2s
			a:hover&
				text-decoration none
				&::after
					width 100%
			svg
				position absolute
				top 0
				left 50%
				width 35px
				height 35px
				fill @color
				transform translateX(-50%)
				transition all .2s
			a:hover&
				color $colorOrange
				svg
					fill @color
			&:last-child
				margin-bottom 0
/*  </header>  */

/*  <nav>  */
.nav
	flex-shrink 0
	background-color $colorGreen
	&__main
		display flex
		flex-wrap wrap
		margin-bottom 15px
	&__item
		width 55%
		color $colorWhite
		font-size 1.8rem
		text-transform uppercase
		margin-top 20px
		&:nth-child(even)
			width 45%
		&--arrow
			display inline-flex
			align-items center
			&::after
				width 13px
				height @width
				border solid #fff
				border-width 0 0 2px 2px
				margin-left 10px
				transform translateY(calc(-50% + 1px)) rotate(-45deg)
				content ''
/*  </nav>  */

/*  <footer>  */
