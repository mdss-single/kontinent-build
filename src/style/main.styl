		@media $640
			width 31%
			margin 0
			font-size 1.6rem
		@media $1024
			width auto
			margin-top 100px
		p
			display inline
			@media $640
				display block
				margin 0
	&__privacy
		font-weight 300
		font-size 1.6rem
		padding 0 30px
		@media $640
			width 66%
			text-align left
			padding 0
		@media $1024
			width auto
			margin-top 30px
	&__nav
		display flex
		flex-direction column
		align-items center
		font-size 1.8rem
		margin 30px 0
		@media $640
			font-size 1.6rem
			align-items flex-start
		@media $1024
			margin 0
		&-title
			color $colorBlue
			font-weight 500
			margin-bottom 5px
		&-item
			color $colorWhite
			margin 5px 0
			&--franchise
				@media $1680
					display none
	&__contacts
		font-size 1.8rem
		border-top 1px solid #121212
		padding-top 25px
		@media $640
			text-align center
		@media $768
			display flex
			justify-content space-between
			font-size 1.6rem
			text-align left
		@media $1024
			border-top 0
			padding-top 0
	&__phone
		@media $768
			width calc(25% - 15px)
			&-title
				margin-bottom 10px
		@media $1024
			width auto
		&-number
			color $colorOrange
			font-weight 500
			font-size 2.4rem
			@media $768
				font-size 1.6rem
	&__workhours
		margin 5px 0 15px
		@media $768
			width calc(25% - 15px)
			margin 0
		@media $1024
			width auto
			margin 15px 0
		p
			display inline
	&__address
		@media $768
			width calc(25% - 15px)
		@media $1024
			width auto
		&-title
			font-weight bold
			padding 0 40px
			@media $768
				padding 0
		&-main
			font-style normal
			margin-top 10px
	&__email
		margin-top 15px
		@media $768
			width calc(25% - 15px)
			margin 0
		@media $1024
			width auto
			margin-top 15px
		&-main
			color $colorOrange
			font-weight bold
/*  </footer>  */

