@require "vars.styl";

/*  <general>  */
html
	font-size 62.5%
	cursor default
	-webkit-text-size-adjust 100%
	-ms-text-size-adjust 100%
	-webkit-tap-highlight-color #000
	text-rendering optimizeLegibility
	-webkit-font-smoothing antialiased
	font-smoothing antialiased
	-moz-osx-font-smoothing grayscale

body
	display flex
	flex-direction column
	min-height 100vh
	color $colorText
	font normal 1.6rem/1.5 'Rubik'
	background-color #fff
:-moz-placeholder
	opacity 1
	color currentColor
:-ms-input-placeholder
	opacity: 1
	color currentColor
a
	color $colorBlue
	font inherit
	text-decoration none
	transition all .2s
	&:hover
		text-decoration underline
img
	max-width 100%
.main
	flex 1
/*  </general>  */

/*  <header>  */
.header
	flex-shrink 0
	text-align center
	@media $480
		&__main
			display flex
			flex-wrap wrap
			justify-content space-between
	@media $768
		&__main
			display block
			position relative
			padding-top 170px
	@media $1024
		&__main
			height 196px
			padding-top 0
	&__target
		font-size 1.8rem
		text-transform uppercase
		border-bottom 6px solid #dfdddb
		padding 15px 0 10px
		@media $480
			display flex
			justify-content space-between
			width 100%
		@media $768
			position absolute
			top 20px
			right 0
			left 285px
			width auto
			border-bottom 0
			padding 0
		@media $1024
			display block
			right auto
			left 260px
		@media $1280
			left 300px
		a
			color currentColor
			text-decoration underline
			&:hover
				text-decoration none
			&:last-child
				display block
				margin-top 10px
				@media $480
					margin-top 0
				@media $1024
					display inline
					margin-left 30px
	&__logo
		margin 20px 0
		@media $480
			width 45%
			text-align left
			margin-bottom 0
		@media $768
			position absolute
			top 26px
			left 0
			max-width 260px
			margin 0
			img
				max-width 200px
		@media $1024
			max-width 222px
			img
				max-width 100%
		&-slogan
			font-size 1.8rem
			margin-top 5px
			@media $1024
				width 180px
	&__contacts
		font-size 1.8rem
		border-bottom 6px solid #dfdddb
		padding-bottom 15px
		@media $480
			width 45%
			border-bottom 0
			margin-top 20px
		@media $768
			position absolute
			top 60px
			right 0
			left 285px
			width auto
			text-align left
			padding-right 155px
			padding-bottom 0
			margin-top 0
		@media $1024
			top 20px
			right 0
			left auto
			width 250px
			text-align center
			padding-right 0
		@media $1280
			display flex
			flex-direction column
			top 30px
			width 260px
			line-height 1
			text-align right
			&-title
				margin-bottom 15px
		&-phone
			color $colorText
			font-weight bold
			font-size 2rem
			text-decoration none
			@media $768
				font-size 2.4rem
			@media $1280
				margin 10px 0
		&-workhours
			font-weight 300
			@media $1280
				margin 10px 0
		&-links
			font-weight 500
			margin-top 5px
			@media $768
				position absolute
				top 50%
				right 0
				margin-top 0
				transform translateY(-50%)
			@media $1024
				position static
				margin-top 15px
			a
				color $colorGreen
				text-decoration underline
				@media $1024
					color currentColor
					margin-right 10px
				&:last-child
					display none
					@media $1024
						display inline
						margin-right 0
				&:hover
					text-decoration none
					@media $1024
						color $colorGreen
	&__action
		display flex
		flex-direction column
		align-items center
		margin 20px 0 10px
		@media $480
			flex-direction row
			justify-content space-between
			align-items flex-start
			width 100%
			text-align left
			border-top 6px solid #dfdddb
			padding-top 20px
			margin-top 0
		@media $768
			text-align center
			border-top 0
			padding-top 0
			margin-bottom 0
		@media $1024
			display flex
			justify-content space-between
			position absolute
			top 67px
			left 260px
			width 440px
		@media $1280
			top 76px
			left 300px
			width 482px
		&-item
			position relative
			color $colorText
			font-size 1.8rem
			padding-top 44px
			padding-bottom 5px
			margin-bottom 20px
			@media $480
				width 30%
			@media $768
				width auto
				white-space nowrap
			@media $1024
				text-align left
				white-space pre-wrap
				margin-bottom 0
				&:first-child
					width 156px
				&:nth-child(2)
					width 84px
				&:last-child
					width 136px
			&::after
				position absolute
				bottom 0
				left 0
				width 0
				height 2px
				background-color $colorOrange
				content ''
				transition all .2s
			a:hover&
				text-decoration none
				&::after
					width 100%
			svg
				position absolute
				top 0
				left 50%
				width 35px
				height 35px
				fill @color
				transform translateX(-50%)
				transition all .2s
				@media $480
					left 0
					transform none
				@media $768
					left 50%
					transform translateX(-50%)
				@media $1024
					left 0
					transform none
			a:hover&
				color $colorOrange
				svg
					fill @color
			&:last-child
				margin-bottom 0
/*  </header>  */

/*  <nav>  */
.nav
	flex-shrink 0
	background-color $colorGreen
	&.is_stuck
		z-index 10000
	&__cover
		position fixed
		top 0
		right 0
		bottom 0
		left 0
		z-index 9998
		background-color rgba(#000, .3)
	&__menu
		display block
		position relative
		color $colorWhite
		font-size 2.4rem
		padding-left 50px
		margin 10px 0
		@media $768
			display none
		&::before
		&::after
			position absolute
			top 50%
			left 0
			width 30px
			content ''
			transform translateY(-50%)
		&::before
			height 20px
			border solid $colorWhite
			border-width 2px 0
		&::after
			height 2px
			background-color $colorWhite
	&__main
		//overflow-y auto
		position fixed
		top 0
		bottom @top
		left 0
		z-index 9999
		width 260px
		background-color $colorWhite
		border solid $colorBlue
		border-width 10px 0
		border-right 2px solid $colorGreen
		padding 10px 0
		transform translateX(-100%)
		transition all .4s
		&--active
			box-shadow 0 0 25px rgba(#000, .8)
			transform translateX(0)
			@media $768
				box-shadow none
				transform none
		@media $768
			display flex
			flex-wrap wrap
			position static
			width auto
			background-color transparent
			border 0
			padding 0
			margin-bottom 15px
			margin-left -25px
			transform none
		@media $1024
			flex-wrap nowrap
			justify-content space-between
			margin-left 0
	&__item
		display block
		font-size 1.8rem
		text-transform uppercase
		border-bottom 1px solid $colorBlue
		padding 8px 15px
		position relative
		@media $768
			display inline
			color $colorWhite
			border-bottom 0
			padding 0
			margin-top 20px
			margin-left 25px
		@media $1024
			margin-left 0
		&--arrow
			@media $768
				display inline-flex
				align-items center
			&::after
				width 13px
				height @width
				border solid #fff
				border-width 0 0 2px 2px
				margin-left 10px
				transform translateY(calc(-50% + 1px)) rotate(-45deg)
				content ''
		.sub
			display none
			position absolute;
			left 0
			top 100%
			background $colorGreen
			color $colorWhite
			padding 10px 20px 15px
			margin-left -20px
			z-index 100
			div
				padding-top 5px
				font-size 85%
				a
					white-space nowrap
		a
			color $colorWhite
		&:hover .sub
			display block

/*  </nav>  */

/*  <footer>  */
.footer
	flex-shrink 0
	background-color #242424
	&__main
		color $colorWhite
		text-align center
		padding 40px 0 35px
		@media $1024
			display flex
			flex-wrap wrap
			justify-content space-between
			position relative
	&__logo
		@media $480
			display block
			max-width 80%
			margin auto
		@media $1024
			width 330px
			margin 0
	&__slogan
		font-size 1.8rem
		margin 15px 0 25px
		span
			display block
		@media $1024
			position absolute
			top 118px
			left 0
			width calc(20% - 10px)
			text-align left
	&__action
		display flex
		flex-direction column
		align-items center
		margin 20px 0 10px
		@media $480
			flex-direction row
			justify-content space-between
			align-items flex-start
			margin-right 18px
			margin-left @margin-right
			margin-bottom 25px
		@media $640
			margin 0 0 30px
		@media $1024
			width calc(60% - 5px)
		&-item
			position relative
			color $colorWhite
			font-size 1.8rem
			padding-top 44px
			padding-bottom 5px
			margin-bottom 20px
			@media $480
				text-align left
				margin-bottom 0
				&:first-child
					width 152px
				&:nth-child(2)
					width 85px
				&:last-child
					width 135px
			@media $640
				text-align center
				&:first-child
				&:nth-child(2)
				&:last-child
