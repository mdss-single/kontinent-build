				bottom 0
				left 0
				width 0
				height 2px
				background-color $colorOrange
				content ''
				transition all .2s
			a:hover&
				text-decoration none
				&::after
					width 100%
			svg
				position absolute
				top 0
				left 50%
				width 35px
				height 35px
				fill @color
				transform translateX(-50%)
				transition all .2s
				@media $480
					left 0
					transform none
				@media $640
					left 50%
					transform translateX(-50%)
				@media $1024
					left 0
					transform none
			a:hover&
				color $colorOrange
				svg
					fill @color
			&:last-child
				margin-bottom 0
	@media $640
		&__cols
			display flex
			flex-wrap wrap
			justify-content space-between
			text-align left
		&__col
			width 32%
			&:nth-child(1)
				display flex
				justify-content space-between
				align-items center
			&:first-child
			&:last-child
				width 100%
	@media $1024
		&__cols
			width 100%
		&__col
			width calc(20% - 10px)
			&:first-child
			&:last-child
				display block
				width calc(20% - 10px)
	&__copyright
		font-size 1.8rem
		margin 25px 0
		@media $480
